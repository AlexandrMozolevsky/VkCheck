<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/online"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|left" />

        <ImageView
            android:id="@+id/onlinePhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/online"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/onlineTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/onlinePhoto"
            android:layout_alignTop="@+id/onlinePhoto"
            android:layout_toEndOf="@+id/onlinePhoto"
            android:layout_toRightOf="@+id/onlinePhoto"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </RelativeLayout>
</android.support.v7.widget.CardView>