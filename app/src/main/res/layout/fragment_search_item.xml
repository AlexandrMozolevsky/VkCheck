<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/itemPhoto"
            android:layout_width="88dp"
            android:layout_height="88dp" />

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/itemPhoto"
            android:layout_toEndOf="@+id/itemPhoto"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/uidText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/userNameText"
            android:layout_alignLeft="@+id/userNameText"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignStart="@+id/userNameText" />

        <TextView
            android:id="@+id/lastseenText"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignLeft="@+id/uidText"
            android:layout_below="@+id/uidText"
            android:layout_alignStart="@+id/uidText" />
    </RelativeLayout>
</android.support.v7.widget.CardView>